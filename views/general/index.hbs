{{>hero}}
<div class="container">
  <h1 class='Howitworksh1 heading'> !Our <span>Top Meals!</span></h1>
  <div class='row topMeal'>
        {{#each mealList}}
          {{#if topMeal}}
            <div class='col-lg-4 col-md-6'>
              <div class='topMealDiv'>
                <img class='image' src={{imageUrl}} alt='bacon' />
                <div class='topMeal_content'>
                 <h3>{{title}}</h3>
                  <p><b>Ingredient</b>: {{includes}}</p>
                  <p><b>Cooking Time</b>: {{cookingTime}} mins</p>
                  <p><b>Description</b>: {{description}}</p>
                  <p><span>${{price}}</span></p>
                </div>
              </div>
            </div>
          {{/if}}
       {{/each}}
  </div>
</div>