<!-- Hero section -->
<section class='vh-100'>
  <div class='align-items-center h-100'>
    <div class='container h-100'>
      <div class='row d-flex justify-content-center align-items-center h-100'>
        <div class='col-12 col-md-9 col-lg-7 col-xl-6'>
          <p class='errorMessage'> {{validationMessages.errorMsg}} </p>

          <div class='card' style='border-radius: 15px;'>
            <div class='card-body p-5'>
              <h2 class='text-center mb-5'>Create an account</h2>
              <form method='post' action='/user/signup'>

                <div class='form-outline mb-4'>
                  <input
                    type='text'
                    class='form-control form-control-lg'
                    name='firstName'
                  />
                  <label>First Name*</label>
                  {{#if validationMessages.firstName}}
                    <span
                      style='color: red;'
                    >{{validationMessages.firstName}}</span><br />
                  {{/if}}
                </div>

                <div class='form-outline mb-4'>
                  <input
                    type='text'
                    class='form-control form-control-lg'
                    name='lastName'
                  />
                  <label>Last Name*</label>
                  {{#if validationMessages.lastName}}
                    <span
                      style='color: red;'
                    >{{validationMessages.lastName}}</span><br />
                  {{/if}}
                </div>

                <div class='form-outline mb-4'>
                  <input
                    type='text'
                    class='form-control form-control-lg'
                    name='email'
                  />
                  <label>Your Email*</label>
                  {{#if validationMessages.email}}
                    <span
                      style='color: red;'
                    >{{validationMessages.email}}</span><br />
                  {{/if}}
                </div>

                <div class='form-outline mb-4'>
                  <input
                    type='password'
                    class='form-control form-control-lg'
                    name='password'
                  />
                  <label>Password*</label>
                  {{#if validationMessages.password}}
                    <span
                      style='color: red;'
                    >{{validationMessages.password}}</span><br />
                  {{/if}}
                </div>

                <div class='justify-content-center'>
                  <input
                    type='submit'
                    class='btn btn-success btn-block btn-lg'
                  />
                </div>

                <p class='text-center mt-5 mb-0'>Have already an account?
                  <a href='/user/login' class='fw-bold'><u>Login here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>